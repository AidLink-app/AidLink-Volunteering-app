<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".RegistrationTypeActivity">

    <!-- Register as Volunteer Button -->

    <!-- Register as Organizer Button -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/volunteerButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="296dp"
        android:backgroundTint="@color/blue"
        android:elevation="4dp"
        android:text="Volunteer"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/organizerButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/blue"
        android:elevation="4dp"
        android:text="Organizer"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/volunteerButton"
        app:rippleColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>